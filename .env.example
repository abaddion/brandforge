MONGODB_URI=mongodb://localhost:27017/brandforge
GEMINI_API_KEY=your_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Cost Control: Set to "false" to disable Anthropic fallback (saves money!)
# Anthropic is expensive, so it's only used as a last resort for permanent failures
# Rate limits will NEVER use Anthropic to avoid unexpected costs
USE_ANTHROPIC_FALLBACK=true

# Anthropic Model Selection (Opus is BLOCKED for cost control)
# Options: claude-haiku-20240307 (cheapest), claude-sonnet-4-20250514 (mid-tier)
# Default: claude-haiku-20240307 (cheapest option)
# WARNING: Opus models are automatically blocked even if you try to set them
ANTHROPIC_MODEL=claude-haiku-20240307

NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Image Generation APIs (Optional)
# Stability AI (Stable Diffusion) - https://platform.stability.ai/
STABILITY_API_KEY=your_stability_api_key_here

# OpenAI DALL-E (Alternative to Stability AI)
OPENAI_API_KEY=your_openai_api_key_here

# Social Media OAuth (Optional - for direct posting)
# These are obtained through OAuth flows, not API keys
# LinkedIn: Requires OAuth app setup
# Twitter/X: Requires OAuth 2.0 app setup
# Facebook: Requires Facebook App setup